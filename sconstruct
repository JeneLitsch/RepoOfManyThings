flags = [
	"-std=c++2a",
	"-Wall", "-Wextra", "-Wconversion", "-Wunreachable-code", "-Wuninitialized", "-pedantic-errors" , "-Wold-style-cast", "-Wno-error=unused-variable"
]

def glob(dirs):
	files = []
	for dir in dirs:
		files.append(Glob(dir + "/*.cxx"))
	return files

env = Environment(
	CXX = "g++",
	CXXFLAGS = flags,
	CPPPATH = ["."],
	CPPDEFINES = [],
	LIBS = [],
	LIBPATH = ".",
	SCONS_CXX_STANDART="c++20",
	CXXCOMSTR = "[Compiling] $TARGET",
	LINKCOMSTR = "[Linking] $TARGET")

def compile(env, dir):
	env.Program('bin/' + dir, glob([dir]))

compile(env, "iife")
compile(env, "range")
compile(env, "unique_cast")
compile(env, "vectorStuff")
compile(env, "ltnIO")
compile(env, "log")
compile(env, "gradient")
compile(env, "automaton")
